when HTTP_REQUEST {
    switch -glob [string tolower [HTTP::path]] {
        "/index" -
        "index.html" -
        "/" {
            pool index_pool
        }
        "/favicon" {
            pool favicon_pool
        }
        "/logo.*" {
            pool logo_pool
        }
        "/api" {
            pool api_pool
        }
        default {
            log local0. "ERROR: request for [HTTP::uri]."
            HTTP::respond 404 "No URI for you!"
        }
    }
}