{
  "class": "AS3",
  "action": "deploy",
  "persist": true,
  "historyLimit": 10,
  "declaration": {
    "class": "ADC",
    "schemaVersion": "3.10.0",
    "id": "555-5555",
    "label": "waf-routing-micro-app-final",
    "remark": "Simple HTTP application for ASE onsite URI routing exercise",
    "Routing_Exercise_WAF": {
      "class": "Tenant",
      "Micro": {
        "class": "Application",
        "template": "http",
        "serviceMain": {
          "class": "Service_HTTP",
          "virtualAddresses": [
            "10.1.20.10"
          ],
          "securityLogProfiles": [
          {
            "bigip": "/Common/Log all requests"
          }
          ],
          "policyEndpoint": ["routing_policy","selective_WAF"],
          "profileMultiplex": {
            "bigip": "/Common/oneconnect"
          }
        },
        "index_pool": {
          "class": "Pool",
          "monitors": [
            "http"
          ],
          "members": [{
            "servicePort": 8080,
            "shareNodes": true,
            "serverAddresses": [
              "10.1.10.5"
            ]
          }]
        },
        "favicon_pool": {
            "class": "Pool",
            "monitors": [
              "http"
            ],
            "members": [{
              "servicePort": 8181,
              "shareNodes": true,
              "serverAddresses": [
                "10.1.10.5"
              ]
            }]
        },
        "logo_pool": {
            "class": "Pool",
            "monitors": [
              "http"
            ],
            "members": [{
              "servicePort": 8282,
              "shareNodes": true,
              "serverAddresses": [
                "10.1.10.5"
              ]
            }]
        },
        "api_pool": {
            "class": "Pool",
            "monitors": [
              "http"
            ],
            "members": [{
              "servicePort": 8383,
              "shareNodes": true,
              "serverAddresses": [
                "10.1.10.5"
              ]
            }]
        },
        "linux_high": {
          "class": "WAF_Policy",
          "url": "https://raw.githubusercontent.com/kreynoldsf5/ASE-Request-Routing/master/LTP-WAF/asm-policy-linux-high.xml"
        },
        "selective_WAF": {
            "class": "Endpoint_Policy",
            "rules": [{
                "name": "enableWAF",
                "conditions": [{
                "type": "httpUri",
                "path": {
                    "values": ["/index"]
                }
                }],
                "actions": [{
                    "type": "waf",
                    "policy": {
                        "use": "linux_high"
                    }
                }]
            },
            {
                "name": "disable",
                "conditions": [],
                "actions": [{
                    "type": "waf",
                    "policy": {
                        "use": "linux_high"
                    }
                }]
            }]
        },
        "routing_policy": {
          "class": "Endpoint_Policy",
          "rules": [{
            "name": "api_pool",
            "conditions": [{
              "type": "httpUri",
              "path": {
                "operand": "equals",
                "values": ["/api"]
              }
            }],
            "actions": [{
              "type": "forward",
              "event": "request",
              "select": {
                "pool": {
                  "use": "api_pool"
                }
              }
            }]
          },
          {
            "name": "favicon_pool",
            "conditions": [{
              "type": "httpUri",
              "path": {
                "operand": "equals",
                "values": ["/favicon.ico"]
              }
            }],
            "actions": [{
              "type": "forward",
              "event": "request",
              "select": {
                "pool": {
                  "use": "favicon_pool"
                }
              }
            }]
          },
          {
            "name": "index_pool",
            "conditions": [{
              "type": "httpUri",
              "path": {
                "operand": "equals",
                "values": ["/index"]
              }
            }],
            "actions": [{
              "type": "forward",
              "event": "request",
              "select": {
                "pool": {
                  "use": "index_pool"
                }
              }
            }]
          },
          {
            "name": "logo_pool",
            "conditions": [{
              "type": "httpUri",
              "path": {
                "operand": "equals",
                "values": ["/logo.png"]
              }
            }],
            "actions": [{
              "type": "forward",
              "event": "request",
              "select": {
                "pool": {
                  "use": "logo_pool"
                }
              }
            }]
          }
        ]
        }
      }
    }
  }
}